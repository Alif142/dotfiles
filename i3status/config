general {
    output_format = i3bar
    colors = true
    interval = 1
}

order += "load"
order += "disk /"
order += "volume master"
order += "tztime local"

wireless _first_ {
    format_up = "WiFi: %quality at %essid"
    format_down = "WiFi: down"
}

ethernet _first_ {
    format_up = "Eth: %ip"
    format_down = "Eth: down"
}

battery 0 {
    format = "Battery: %status %percentage"
    path = "/sys/class/power_supply/BAT0"
}

cpu_temperature 0 {
    format = "Temp: %degrees Â°C"
    path = "/sys/class/thermal/thermal_zone0/temp"
}

load {
    format = "Load: %1min"
}

disk "/" {
    format = "Disk: %free"
}

volume master {
    format = "Vol: %volume"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

tztime local {
    format = "%Y-%m-%d | %I:%M:%S"
}

